{
  "name": "pharmacy_pos",
  "productName": "Pharmacy Plus POS",
  "version": "0.0.1",
  "repository": "https://github.com/nyugoh/pharmacy-pos.git",
  "description": "Web based POS system",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "yarn install && electron .",
    "pack": "build --dir --win --ia32",
    "dist": "build --win --ia32"
  },
  "author": "Magnum Digital Limited Kenya <joenyugoh@gmail.com>",
  "license": "BSD-2-Clause",
  "dependencies": {
    "browser-window": "^0.4.0",
    "moment": "^2.20.1",
    "socket.io": "~1.7.x",
    "sweetalert2": "^7.12.3"
  },
  "engines": {
    "node": ">=6.11.4"
  },
  "devDependencies": {
    "electron": "^1.8.3",
    "electron-builder": "^20.8.1"
  },
  "config": {
    "forge": "electron-forge-config.js"
  },
  "build": {
    "appId": "com.electron.magnum",
    "productName": "Pharmacy Plus POS",
    "copyright": "Copyright Â© 2018 Magnum Digital Limited Kenya",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/win.ico"
    }
  }
}
